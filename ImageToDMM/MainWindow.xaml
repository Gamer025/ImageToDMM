<Window x:Class="ImageToDMM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageToDMM"
        mc:Ignorable="d"
        Title="Image to DMI" Height="350" Width="400" ResizeMode="NoResize">
    <Grid>
		<Label Content="Mode" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<RadioButton x:Name="PNGMode" Content="From PNG files (layer0.png, layer1.png ...)" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" GroupName="ModeSelect"/>
		<RadioButton x:Name="GIFMode" Content="From GIF file (map.gif)" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" GroupName="ModeSelect"/>
		<Button Content="Create DMM!" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
		<Label Content="Log" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top"/>
		<RichTextBox HorizontalAlignment="Center" Height="150" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="370">
			<FlowDocument>
				<Paragraph>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>
	</Grid>
</Window>
